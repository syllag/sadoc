<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd ">
	<persistence-unit name="sadocDAOcommun">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>fr.univartois.ili.sadoc.dao.entities.Domaine</class>
		<class>fr.univartois.ili.sadoc.dao.entities.Competence</class>
		<class>fr.univartois.ili.sadoc.dao.entities.Item</class>
		<class>fr.univartois.ili.sadoc.dao.entities.Referentiel</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:myDbSadoc;create=true" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
		</properties>
	</persistence-unit>
</persistence>
