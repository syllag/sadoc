<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

        <constant name="struts.enable.DynamicMethodInvocation" value="false" />
        <constant name="struts.custom.i18n.resources" value="demo" />
        <package name="sadocWeb" namespace="/" extends="struts-default">

		<default-action-ref name="Home" />
		
		<action name="Home">
			<result>content/home/Home.jsp</result>
		</action>
			
		<action name="ValidateConnect" class="fr.univartois.ili.sadoc.actions.ManageConnect"
			method="execute">
			<result name="success">content/profile/Profile.jsp</result>
			<result name="input">content/connect/Connect.jsp</result>
		</action>

		<action name="SignIn" class="fr.univartois.ili.sadoc.actions.ManageSignIn"
			method="execute">
            <result name="success">content/connect/Connect.jsp</result>
			<result name="input">content/signin/Signin.jsp</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>

		<action name="Deconnection" class="fr.univartois.ili.sadoc.actions.Deconnection">
			<result name="input">content/home/Home.jsp</result>
			<result name="success">content/home/Home.jsp</result>
		</action>

		<action name="ModifyProfile" class="fr.univartois.ili.sadoc.actions.TestManageProfile">
			<result name="input">content/profile/Profile.jsp</result>
			<result name="success">content/profile/EditProfile.jsp</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>
		
		<action name="Profile">
			<result name="input">content/profile/Profile.jsp</result>
			<result name="success">content/profile/Profile.jsp</result>
		</action>
		
		<action name="ModifyProfile2" class="fr.univartois.ili.sadoc.actions.ManageProfile">
			<result name="success">content/profile/Profile.jsp</result>
			<result name="input">content/profile/EditProfile.jsp</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>
		
		<action name="checkDocument" class="fr.univartois.ili.sadoc.actions.CheckDocument"
			method="execute">
			<result name="success">content/DocumentInformation/documentInformation.jsp
			</result>
			<result name="input">content/DocumentInformation/documentInformationError.jsp
			</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>

		<action name="downloadResume" class="fr.univartois.ili.sadoc.actions.DownloadResume"
			method="execute">
			<result name="success" type="stream">
				<param name="contentType">application/pdf</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="cv.pdf"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>

		<action name="downloadP7S" class="fr.univartois.ili.sadoc.actions.DownloadP7S"
			method="execute">
			<result name="success" type="stream">
				<param name="contentType">application/x-pkcs7-signature</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="authenticate.p7s"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="error">content/DocumentInformation/documentInformationError.jsp
			</result>
			<result name="astalavista">content/home/Home.jsp</result>
		</action>
		<action name="ShowCreateResume" class="fr.univartois.ili.sadoc.actions.ShowCreateResume"
				method="execute" >
				<result name="success">content/resume/createResume.jsp</result>
		</action>
				
		<action name="CreateResume" class="fr.univartois.ili.sadoc.actions.ManageResume"
				method="execute" >
				<result name="success">content/resume/manageResume.jsp</result>
		</action>
		
	</package>
</struts>

