<mapping>

	<!-- Mapping for Owner -->
	<class name="fr.univartois.ili.sadoc.entities.Owner">
		<map-to xml="owner" />
		<field name="id" type="integer">
			<bind-xml name="id" node="element" />
		</field>
		<field name="firstName" type="string">
			<bind-xml name="firstName" node="element" />
		</field>
		<field name="lastName" type="string">
			<bind-xml name="lastName" node="element" />
		</field>
		<field name="mail" type="string">
			<bind-xml name="mail" node="element" />
		</field>
	</class>

	<!-- Mapping for Document -->
	<class name="fr.univartois.ili.sadoc.entities.Document">
		<map-to xml="document" />
		<field name="id" type="integer">
			<bind-xml name="id" node="element" />
		</field>
		<field name="name" type="string">
			<bind-xml name="name" node="element" />
		</field>
		<field name="checkSum" type="string">
			<bind-xml name="checkSum" node="element" />
		</field>
		<field name="pk7" type="byte">
			<bind-xml name="pk7" node="element" />
		</field>
	</class>

	<!-- Mapping for Competence -->
	<class name="fr.univartois.ili.sadoc.entities.Competence">
		<map-to xml="competence" />
		<field name="id" type="integer">
			<bind-xml name="id" node="element" />
		</field>
		<field name="name" type="string">
			<bind-xml name="name" node="element" />
		</field>
		<field name="description" type="string">
			<bind-xml name="description" node="element" />
		</field>
		<field name="acronym" type="string">
			<bind-xml name="acronym" node="element" />
		</field>
	</class>
	
</mapping>