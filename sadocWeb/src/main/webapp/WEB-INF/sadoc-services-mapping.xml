<mapping>

  <!--  Mapping for OrderRequest  -->
  <class name="fr.univartois.ili.sadoc.sadocweb.springsample.OrderRequest">
    <map-to xml="orderRequest" />
	<field name="balance" type="double">
		  <bind-xml name="balance" node="element"/>
		</field>
    <field name="number" type="integer">
      <bind-xml name="number" node="element" />
    </field>
        <field name="time" type="string">
      <bind-xml name="time" node="element" />
    </field>
  </class>
  
    <!--  Mapping for User  -->
  <class name="fr.univartois.ili.sadoc.sadocweb.springsample.User">
    <map-to xml="user" />
    <field name="number" type="integer">
      <bind-xml name="number" node="element" />
    </field>
        <field name="name" type="string">
      <bind-xml name="name" node="element" />
    </field>
  </class>

</mapping>